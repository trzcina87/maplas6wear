<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mapapage"
    tools:deviceIds="wear_square">

    <ImageView
        android:id="@+id/mapimageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@color/black"
        android:src="@mipmap/maplaslogo" />


    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:max="10"
        android:id="@+id/progress" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progress"
        android:layout_alignParentStart="true"
        android:id="@+id/text" />

    <ImageView
        android:src="@mipmap/minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        android:id="@+id/minusimage" />

    <ImageView
        android:src="@mipmap/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:id="@+id/plusimage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/textgora" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/czaslinearlayout"
        android:layout_height="wrap_content"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="50px"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:id="@+id/mapaczas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="3px"
            android:paddingRight="3px"
            android:paddingBottom="1px"
            android:textColor="@color/white"
            android:visibility="invisible"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/infomale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        android:src="@mipmap/infomale" />

    <TextView
        android:id="@+id/trasainfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingTop="1px"
        android:paddingLeft="3px"
        android:visibility="invisible"
        android:text="" />

</RelativeLayout>